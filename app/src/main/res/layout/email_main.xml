<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="87dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your email"
        android:textStyle="bold"
        android:textColor="#3E5481"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="We have sent the code to your email"
        android:textColor="#9FA5C0"
        android:textSize="15dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="35dp">

        <EditText
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_34"
            android:layout_marginLeft="10dp"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="#3E5481"
            android:textSize="30dp"
            android:inputType="number">
        </EditText>

        <EditText
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_34"
            android:layout_marginLeft="10dp"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="#3E5481"
            android:textSize="30dp"
            android:inputType="number">
        </EditText>

        <EditText
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_34"
            android:layout_marginLeft="10dp"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="#3E5481"
            android:textSize="30dp"
            android:inputType="number">
        </EditText>

        <EditText
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_34"
            android:layout_marginLeft="10dp"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="#3E5481"
            android:textSize="30dp"
            android:inputType="number">
        </EditText>



    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_horizontal"
           android:layout_marginTop="50dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="code expires in: ">
           </TextView>

           <TextView
               android:id="@+id/timer"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="03:00"
               android:textColor="#FF6464">

           </TextView>


       </LinearLayout>

       <Button
           android:id="@+id/start"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="40dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="40dp"
           android:backgroundTint="#1FCC79"
           android:text="Verify">

       </Button>

   </LinearLayout>

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/contr"
        android:gravity="center"
        android:text="Send again"
        android:textColor="#9FA5C0" />


</LinearLayout>
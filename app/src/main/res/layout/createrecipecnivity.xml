<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fon_recip">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exitee"
        android:layout_width="87dp"
        android:layout_height="57dp"
        android:text="Cancel"
        android:textColor="#FF6464" />
    <TextView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:text="1/"
        android:layout_gravity="right"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="2"
        android:textColor="#9FA5C0"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"/>


</FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="161dp"
        android:layout_gravity="center"
        android:background="@drawable/polska"
        android:orientation="vertical">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/vr"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Add Cover Photo"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:text="(up to 12 Mb)"
            android:textColor="#9FA5C0"
            android:textSize="12sp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">


        <TextView
            android:layout_width="97dp"
            android:layout_height="27dp"
            android:text="Food Name"
            android:textStyle="bold"
            android:textSize="17sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line">


            <EditText
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:background="@null"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="183dp"
                android:hint="Enter food name" />

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">


        <TextView
            android:layout_width="97dp"
            android:layout_height="27dp"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="17sp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line2">


            <EditText
                android:layout_width="233dp"
                android:layout_height="81dp"
                android:background="@null"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="144dp"
                android:hint="Tell a little about your food" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="Cooking Duration"
            android:textStyle="bold"
            android:textSize="17sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:text="(in minutes)"
            android:textColor="#3E5481"
            android:textSize="17sp"/>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">

        <TextView
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:text="10"
            android:textColor="#1FCC79" />

        <TextView
            android:layout_width="21dp"
            android:layout_height="25dp"
            android:text="30"
            android:layout_gravity="center"
            android:textColor="#1FCC79"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:text="60"
            android:layout_gravity="right"
            android:textColor="#9FA5C0"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next"
            android:backgroundTint="#1FCC79"/>


    </LinearLayout>





</LinearLayout>
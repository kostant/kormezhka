<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <FrameLayout
        android:background="@drawable/backgruond_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:text="Add a Filter"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="Category"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:backgroundTint="#1FCC79"
                    android:id="@+id/all_filter"
                    android:layout_marginLeft="24dp"
                    android:text="All"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center"
                    android:background="@drawable/button_line_gray"
                    android:id="@+id/food_filter"
                    android:layout_width="86dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="16dp"
                    android:text="Food"
                    android:textColor="#9FA5C0" />

                <TextView
                    android:gravity="center"
                    android:background="@drawable/button_line_gray"
                    android:textColor="#9FA5C0"
                    android:id="@+id/drink_filter"
                    android:layout_marginRight="77dp"
                    android:text="Drink"
                    android:layout_marginLeft="16dp"
                    android:layout_width="86dp"
                    android:layout_height="47dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Cooking Duration"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="#9FA5C0"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:text=" (in minutes)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:textColor="#1FCC79"
                        android:text="10"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="140dp"
                        android:textColor="#1FCC79"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:id="@+id/score_text"
                        android:text="30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="140dp"
                        android:text="60"
                        android:textColor="#9FA5C0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <SeekBar
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="52dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:textColor="@color/black"
                        android:backgroundTint="#D0DBEA"
                        android:layout_weight="1"
                        android:text="Canel"
                        android:layout_marginLeft="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"/>
                    <Button
                        android:backgroundTint="#1FCC79"
                        android:textColor="@color/white"
                        android:layout_marginRight="24dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="Done"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>